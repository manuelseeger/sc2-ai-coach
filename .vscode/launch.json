{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "AI Coach",
      "type": "debugpy",
      "request": "launch",
      "program": "coach.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": ["--verbose"],
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1"
      }
    },
    {
      "name": "AI Coach Text only",
      "type": "debugpy",
      "request": "launch",
      "program": "coach.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": ["--verbose"],
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1",
        "AICOACH_audiomode": "text",
        "AICOACH_obs_integration": "False"
      }
    },
    {
      "name": "AI Coach Mocked",
      "type": "debugpy",
      "request": "launch",
      "program": "coach.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": ["--verbose"],
      "env": {
        "PYDEVD_DISABLE_FILE_VALIDATION": "1",
        "AICOACH_aibackend": "Mocked"
      }
    },
    {
      "name": "Build and Deploy",
      "type": "debugpy",
      "request": "launch",
      "program": "build.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": ["--deploy"]
    },
    {
      "name": "CLI sync",
      "type": "debugpy",
      "request": "launch",
      "program": "repcli.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": ["--debug", "--clean", "sync"]
    },
    {
      "name": "CLI deamon",
      "type": "debugpy",
      "request": "launch",
      "program": "repcli.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": ["--debug", "--clean", "deamon"]
    }
  ]
}
